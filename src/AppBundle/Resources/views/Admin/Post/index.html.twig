{% extends '@App/Admin/layout.html.twig' %}

{% block main %}

    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Blog Posts</h4>
                    <div class="float-right">
                        <a href="{{ path('admin_post_add') }}">
                            <button type="button" class="btn btn-success btn-fw">
                                <i class="mdi mdi-check"></i>Add
                            </button>
                        </a>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                            <tr>
                                <th>Date</th>
                                <th>Title</th>
                                <th>Tags</th>
                                <th>Number of views</th>
                                <th>Active</th>
                                <th>Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for post in posts %}
                                <tr>
                                    <td>{{ post.date | date('d. m. Y H:i') }}</td>
                                    <td>{{ post.title }}</td>
                                    <td>{{ post.tagsJoined }}</td>
                                    <td>{{ post.numberOfViews }}</td>
                                    <td>
                                        {% if post.active %}
                                            <label class="badge badge-success">Active</label>
                                        {% else %}
                                            <label class="badge badge-warning">Inactive</label>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <a href="{{ path('admin_post_edit', { 'id': post.id }) }}">
                                            <button type="button"
                                                    class="btn btn-secondary btn-fw">
                                                <i class="mdi mdi-file-document"></i>Edit
                                            </button>
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
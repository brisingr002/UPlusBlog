{% extends '@App/Admin/layout.html.twig' %}

{% form_theme add_form 'bootstrap_4_layout.html.twig' %}

{% block scripts %}
    {{ parent() }}

    <script src="{{ asset('bundles/app/admin/js/tinymce/tinymce.min.js') }}"></script>
    <script>tinymce.init({ selector:'textarea' });</script>

{% endblock %}

{% block main %}

    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Add post</h4>

                    {{ form_start(add_form) }}
                    {{ form_widget(add_form) }}
                    {{ form_end(add_form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
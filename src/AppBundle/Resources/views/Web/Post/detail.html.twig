{% extends '@App/Web/layout.html.twig' %}

{% block title %}
{% endblock %}

{% block main %}
    <!-- Page Header -->
    <header class="masthead" style="background-image: url({{ asset('bundles/app/web/img/home-bg.jpg') }})">
        <div class="overlay"></div>
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-md-10 mx-auto">
                    <div class="post-heading">
                        <h1>{{ post.title }}</h1>
                        <span class="meta">Posted on {{ post.date | date('d.m.Y H:i') }}</span>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <article>
        <!-- Main Content -->
        <div class="container">
            <!-- Post Content -->
            <div class="row">
                <div class="col-lg-8 col-md-10 mx-auto">
                    {{ post.text | raw }}
                </div>
            </div>
        </div>
    </article>
{% endblock %}